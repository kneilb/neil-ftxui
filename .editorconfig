# Editor configuration file to help ensure consistent code layout
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true

[Makefile]
indent_style = tab

[*.cs]
end_of_line = crlf

[*.tf]
indent_size = 2

[*.yml]
indent_size = 2

[*.yaml]
indent_size = 2

[*.yaml.j2]
indent_size = 2

[*.json]
indent_size = 2
